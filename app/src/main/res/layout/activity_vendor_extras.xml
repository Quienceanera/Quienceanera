                        android:text="@string/t"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                        android:textColor="@color/pink"
                        android:textSize="30sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
