<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.eventmakr.eventmakr.Fragments.VendorFragments.OrderDetailFragment">

    <RelativeLayout
        android:id="@+id/layoutOrderDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="5dp"
                android:id="@+id/imageViewOrderDetail"
                android:layout_alignParentStart="true"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/imageViewOrderDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewOrderDetailCustomerName"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/blue"
                    android:textSize="35sp"
                    android:elevation="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textViewOrderDetailEventName"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:elevation="10dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewOrderDetailDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:elevation="10dp" />

                <TextView
                    android:id="@+id/textViewOrderDetailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp" />

            </LinearLayout>

    </RelativeLayout>

</FrameLayout>
