<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:text="@string/choose_a_date_for_your_occasion"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:elevation="6dp"
                android:textSize="20sp"
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCalendar" />

            <RelativeLayout
                android:layout_above="@+id/buttonFindVendors"
                android:layout_centerHorizontal="true"
                android:id="@+id/layoutCalendar"
                android:layout_below="@+id/textViewCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/light_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            </android.support.v7.widget.CardView>

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/buttonFindVendors"
                android:elevation="2dp"
                app:cardBackgroundColor="@color/colorButtons"
                app:cardCornerRadius="5dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_centerInParent="true"
                    android:text="@string/find_vendors"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:elevation="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            </android.support.v7.widget.CardView>


    </RelativeLayout>

