<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cardViewCartItem"
    app:cardElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewCartItem_helper"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">

    <ImageView
        android:id="@+id/imageViewCartItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_below="@+id/cardViewCartItem_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="small tray"
                android:id="@+id/textViewCartItemName"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:textSize="25sp" />

            <!--<TextView-->
                <!--android:text="vendor name"-->
                <!--android:id="@+id/textViewCartItemVendorName"-->
                <!--android:textAppearance="@style/TextAppearance.AppCompat.Subhead"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:elevation="10dp"-->
                <!--android:textSize="15sp" />-->

            <TextView
                android:text="4"
                android:id="@+id/textViewCartItemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:textSize="15sp" />

        <TextView
            android:text="10.99"
            android:id="@+id/textViewCartItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:textSize="15sp" />

    </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>