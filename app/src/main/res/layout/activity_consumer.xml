<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eventmakr.eventmakr.Activities.VendorActivity">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/containerEventBannerFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!--<fragment-->
            <!--android:name="com.example.eventmakr.eventmakr.Fragments.ConsumerFragments.EventBannerFragment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"/>-->
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@drawable/pink"
            android:elevation="4dp"
            app:navigationIcon="@drawable/arrow_left"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageViewIcon"
                        android:layout_margin="2dp"
                        android:paddingEnd="57dp"
                        android:src="@drawable/logoi2"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp" />


            </RelativeLayout>


     </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/containerEventsList"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/navBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<fragment-->
                <!--android:id="@+id/eventsListFragment"-->
                <!--android:name="com.example.eventmakr.eventmakr.RecyclerFragment.EventRecyclerFragmentent"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"/>-->

        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_above="@+id/navBar"
            android:id="@+id/fabNewEvent"
            android:src="@drawable/plus"
            app:backgroundTint="@color/colorButtons"
            app:pressedTranslationZ="8dp"
            app:elevation="6dp"
            app:useCompatPadding="true"
            android:layout_marginBottom="48dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <FrameLayout
        android:id="@+id/consumerActivityLayout"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


        <FrameLayout
            android:id="@+id/navConsumerActivityLayout"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/navBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    <fragment
        android:name="com.example.eventmakr.eventmakr.Fragments.ConsumerNavBarFragments.NavBar"
        android:id="@+id/navBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>
