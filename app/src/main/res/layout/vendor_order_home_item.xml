<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewVendorOrderHome"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="1dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layoutCheckBox"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewConfirm"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:textSize="12sp"
                android:textColor="@color/pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/vendorOrderLayout2"
            android:layout_below="@+id/layoutCheckBox"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewVendorOrderHomeCount"
                android:textAlignment="viewEnd"
                android:textStyle="italic"
                android:text="Quantity"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:background="@color/yellow"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/textViewVendorOrderHomePriceTotal"
                android:textAlignment="viewEnd"
                android:text="total price"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:elevation="10dp"
            android:layout_below="@+id/vendorOrderLayout2"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/notificationMessage"
                android:src="@drawable/message_text_outline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="5dp"
            android:id="@+id/imageViewVendorOrderHome"
            app:border_color="@color/pink"
            app:border_width="1dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:id="@+id/vendorOrderLayout1"
            android:layout_margin="5dp"
            android:layout_below="@+id/imageViewVendorOrderHome"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewVendorOrderHomeCustomerName"
                android:textSize="25sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="@color/blue"
                android:text="vendorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/pink"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/textViewVendorOrderHomeEventName"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="eventname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewVendorOrderHomeTime"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="12sp"
                android:text="Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

   </android.support.v7.widget.CardView>