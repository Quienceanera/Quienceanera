<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cardViewVendor"
    app:cardElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewVendor_helper"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp"
            android:layout_width="160dp"
            android:layout_height="120dp">

    <ImageView
        android:id="@+id/imageViewVendor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/cardViewVendor_helper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewVendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:elevation="10dp"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <RelativeLayout
                android:layout_below="@+id/textViewVendor"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mapMarker"
                    android:layout_toRightOf="@+id/textViewVendor_address"
                    android:src="@drawable/map_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewVendor_address"
                    android:elevation="10dp"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/PI"
                    android:text="Popular Items:"
                    android:layout_margin="2dp"
                    android:textStyle="bold|italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:textSize="15sp" />

                <TextView
                    android:text="Sushi, Yakisoba, Ramen"
                    android:layout_margin="2dp"
                    android:layout_below="@id/PI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewPopularItems"
                    android:elevation="10dp"
                    android:textSize="13sp" />

            </RelativeLayout>







    </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:src="@drawable/dollar_sign"
                android:id="@+id/imageViewPrice1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <ImageView
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                android:src="@drawable/dollar_sign"
                android:id="@+id/imageViewPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="26dp"
                android:src="@drawable/dollar_sign"
                android:id="@+id/imageViewPrice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </RelativeLayout>


</android.support.v7.widget.CardView>