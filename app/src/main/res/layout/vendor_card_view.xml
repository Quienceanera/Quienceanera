<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cardViewVendor"
    app:cardElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewVendor_helper"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="130dp">

    <ImageView
        android:id="@+id/imageViewVendor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_below="@+id/cardViewVendor_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewVendor"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:textSize="27sp" />

            <RelativeLayout
                android:id="@+id/layoutVendorAdress"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mapMarker"
                    android:layout_toEndOf="@+id/textViewVendor_address"
                    android:src="@drawable/map_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:id="@+id/textViewVendor_address"
                    android:elevation="10dp"
                    android:textSize="13sp" />

            </RelativeLayout>

                <TextView
                    android:id="@+id/PI"
                    android:text="Popular Items:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:textSize="15sp" />

                <TextView
                    android:text="Sushi, Yakisoba, Ramen"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewPopularItems"
                    android:elevation="10dp"
                    android:textSize="13sp" />

    </LinearLayout>

        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:elevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:src="@drawable/currency_usd"
                android:id="@+id/imageViewPrice1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <ImageView
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/currency_usd"
                android:id="@+id/imageViewPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/currency_usd"
                android:id="@+id/imageViewPrice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>