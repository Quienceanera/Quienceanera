<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/layoutVendor2"
    android:layout_weight="1"
    android:layout_below="@+id/layoutVendorMenu1"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_consumer_vendor">

    <TextView
        android:text="DRINKS"
        android:textColor="@color/yellow"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginStart="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="220dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewMixologists"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:layout_width="180dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_margin="1dp"
                    android:layout_above="@+id/mixologists"
                    android:id="@+id/imageViewMixologists"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="MIXOLOGISTS"
                    android:id="@+id/mixologists"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp"
                    android:textColor="@color/pink"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewWine"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:layout_width="180dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_margin="1dp"
                    android:layout_above="@+id/wine"
                    android:id="@+id/imageViewWine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="WINE"
                    android:id="@+id/wine"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp"
                    android:textColor="@color/pink"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewKegs"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:layout_width="180dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_margin="1dp"
                    android:layout_above="@+id/kegs"
                    android:id="@+id/imageViewKegs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="KEGS"
                    android:id="@+id/kegs"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp"
                    android:textColor="@color/pink"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewWholesale"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:layout_width="180dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_margin="1dp"
                    android:layout_above="@+id/wholesale"
                    android:id="@+id/imageViewWholesale"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="WHOLESALE"
                    android:id="@+id/wholesale"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp"
                    android:textColor="@color/pink"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</HorizontalScrollView>

</LinearLayout>