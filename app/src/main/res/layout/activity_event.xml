<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutEvent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:fitsSystemWindows="true"
    tools:context="com.example.eventmakr.eventmakr.Activities.EventActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarEvents"
        app:elevation="2dp"
        android:background="@color/tw__transparent"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Toolbar
            android:id="@+id/toolbarEvents"
            android:layout_gravity="top"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_gravity="center|top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="V"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/logoColor"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="E"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/yellow"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="N"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/green"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="D"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/pink"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="O"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/blue"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="R"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/yellow"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="S"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/green"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabRecommendVendor"
                android:src="@drawable/store"
                app:useCompatPadding="true"
                android:layout_gravity="end|top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </Toolbar>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_below="@+id/appBarEvents"
        android:id="@+id/containerEventActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
