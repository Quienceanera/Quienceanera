<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutEvent"
    xmlns:tools="http://schemas.android.com/tools"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.eventmakr.eventmakr.Activities.EventActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabRevealTarget"
            android:transitionName="reveal"
            android:src="@drawable/store2"
            android:backgroundTint="@color/colorButtons"
            app:useCompatPadding="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarEvents"
        app:elevation="2dp"
        android:background="@color/tw__transparent"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Toolbar
            android:id="@+id/toolbarEvents"
            android:layout_gravity="top"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_gravity="center|top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/v"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/logoColor"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/e"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/yellow"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/n"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/green"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/d"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/pink"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/o"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/blue"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/r"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/yellow"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/s"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/green"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabRecommendVendor"
                android:src="@drawable/store"
                app:useCompatPadding="true"
                android:layout_gravity="end|top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </Toolbar>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:visibility="invisible"
        android:layout_below="@+id/appBarEvents"
        android:id="@+id/containerEventActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:background="@color/tw__transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
