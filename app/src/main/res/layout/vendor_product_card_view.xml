<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/light_transparent"
    android:id="@+id/cardViewMenuItem"
    app:cardElevation="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewVendorProductItem_helper"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewVendorProductItem"
        android:layout_width="200dp"
        android:layout_height="160dp"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/layoutTextViews"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_below="@+id/cardViewVendorProductItem_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewVendorProductItemName"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/blue"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp" />


            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/textViewMenuItemDescription"-->
                <!--android:elevation="10dp" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewVendorProductItemPrice"
                android:elevation="10dp"/>

    </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>