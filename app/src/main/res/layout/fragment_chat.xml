<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.eventmakr.eventmakr.Fragments.ConsumerMainFragments.ChatFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/containerChatItemList"
            android:layout_above="@+id/cardViewEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_alignParentBottom="true"
        android:id="@+id/cardViewEditText"
        app:cardBackgroundColor="@color/light_transparent"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/chatEditText"
                android:layout_marginEnd="40dp"
                android:layout_alignParentBottom="true"
                android:hint="Send a Message..."
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.design.widget.FloatingActionButton
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_menu_send"
                android:id="@+id/fabSend"
                app:backgroundTint="@color/fabColor"
                android:tint="@color/colorAccentLighter"
                android:alpha=".8"
                app:elevation="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    </RelativeLayout>

</FrameLayout>
