<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/cardViewInput_helper3"
        app:cardBackgroundColor="@color/light_transparent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerHorizontal="true"
                android:text="Name your event"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewInputEventName" />

            <EditText
                android:id="@+id/editTextInputEventName"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textViewInputEventName"
                android:inputType="textCapSentences"
                android:layout_width="160dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/buttonNextEventName"
        app:cardBackgroundColor="@color/colorButtons"
        app:cardCornerRadius="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:text="@string/next"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:textSize="20sp"
                android:elevation="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>